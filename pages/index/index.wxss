/**index.wxss**/
page {
  background-color: rgb(246, 246, 246);
}
.van-hairline--top-bottom:after {border-width: 0 !important;}
.swiperBox {height: 350rpx;}
.swiperBox swiper {height: 100%;}
.swiper-item {height: 350rpx;width: 100%;}

.list-box .list-item {
  width: 48.5%;
}
.notice-icon {min-width: 40rpx;}
.guid-box {background-color: #fff;}
.guid-box .panel {width: 120rpx;text-align: center;font-size: 26rpx;margin-bottom: 30rpx;}
.guid-box .panel image {width: 82%;}
/* 热门商品 */
.scroll-box {background-color: #fff;margin-top: 20rpx;}
.scroll-box .scroll-item {
  display: inline-block;
  width: 300rpx;
  vertical-align: top;
}
.scroll-box .scroll-item:last-child {
  margin-right: 0;
}
.scroll-view_H {
  white-space: nowrap;
}
.scroll-item .text-box .por_name {
  width: 100%;
  white-space: normal;
  color: #333;
  line-height: 48rpx;
}
.scroll-item .text-box .por_name .flag {
  border: 1rpx solid #ff3800;
  padding: 2rpx 5rpx;
  color: #ff3800;
}
.scroll-item .text-box .price-box {color: #ff3800;}
.scroll-item .text-box .price-box .now-price {
  color: #ff3800;
  font-size: 32rpx;
}
.scroll-item .text-box .price-box .before-price {
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 15rpx;
}
.status-box {margin-top: 20rpx;}
.status-box .num {
  color: #a1a1a1;
}
.status-box .btn{
  width: 150rpx;
  height: 56rpx;
  line-height: 56rpx;
  border-radius: 28rpx;
  background-color: #d2d2d2;
  color: #fff;
}
.status-box .btn:after {
  border: none;
}
/* 商品列表 */
.list-box {
  background-color: #fff;
  margin-top: 20rpx;
}
.list-box .list-item {
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow:0px 2px 10px 0px rgba(41,61,95,0.1);
}
.list-item .price-box {
  font-size: 24rpx;
  color: #ff3800;
}
.list-item .price-box .before-price {
  color: #a1a1a1;
  font-size: 24rpx;
  text-decoration: line-through;
}