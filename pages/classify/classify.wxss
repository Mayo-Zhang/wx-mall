/* pages/classify/classify.wxss */
.container {
    height: 100vh;
    display: flex;
    justify-content: space-between;
}
.left {
    width: 170rpx;
    height: 100%;
    background-color: #f7f8fa;
}
.right {
    flex: 1;
}
.right .section .section-item {
    width: 33.3333%;
    box-sizing: border-box;
}
.right .section .section-item  .item-name {
    line-height: 48rpx;
}
.van-sidebar-item--selected {
    border-color: #ca6464 !important;
}