/**app.wxss**/
@import 'icon.wxss';
image {width: 100%;}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
/* padding，margin值 */
.margin-right-xs {margin-right: 10rpx;}
.margin-right-sm {margin-right: 20rpx;}
.margin-top-sm {margin-top: 20rpx;}
.margin-bottom-sm {margin-bottom: 20rpx;}
.padding-xs {padding: 10rpx;}
.padding-sm {padding: 20rpx;}
.padding {padding: 30rpx;}
.padding-tb {padding: 30rpx 0;}
.padding-lr-sm {padding: 0 24rpx;}
.padding-lr {padding: 0 30rpx;}
.padding-lr-lg {padding: 0 30rpx;}
.padding-top-sm {padding-top: 20rpx;}
/* 字体 */
.text-center {text-align: center;}
.text-bold {font-weight: bold;}

.fs20 {font-size: 20rpx;}

.fs24 {font-size: 24rpx;}

.fs26 {font-size: 26rpx;}

.fs28 {font-size: 28rpx;}

.fs30 {font-size: 30rpx;}

.fs32 {font-size: 32rpx;}

/* 颜色 */
.text-666 {color: #666;}

.margin-bottom-sm {margin-bottom: 20rpx;}
/* flex布局 */
.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.flex-wrap {
  flex-wrap: wrap;
}
.flex-nowrap {
  flex-wrap: wrap;
}

.text-ellipsis{white-space:nowrap;overflow:hidden;text-overflow:ellipsis;}
.text-ellipsisclamp{display: -webkit-box;-webkit-box-orient: vertical;-webkit-line-clamp: 2;overflow: hidden;}